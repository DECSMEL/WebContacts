<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ASP.NET Contact Net</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("All contacts", "All", "Contact", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Edit my profile", "EditProfile", "Contact", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("My favorite contacts", "GetFavoriteContacts", "Contact", new { area = "" }, new { @class = "navbar-brand" })</li>

                </ul>
                <ul class="nav navbar-nav navbar-left">                    
                    <li>
                    @using (Html.BeginForm("FindByLastName", "Contact"))
                    {
                        @Html.AntiForgeryToken()
                        <input type="search" name ="lastname" placeholder="Search by last name" class="navbar-form"/>
                        <input type="submit" value="Search" class="navbar-btn"/>
                    }
                    </li>
                    </ul>
                    @if (Request.IsAuthenticated)
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li class="navbar-text">Hello @User.Identity.Name !</li>
                            <li>@Html.ActionLink("Log out", "Logout", "Contact", new { @class = "navbar-brand" })</li>
                        </ul>
                    }
                    
            </div>
        </div>
    </div>

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-success">@TempData["Info"]</div>
    }

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ASP.NET Contact Net</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>