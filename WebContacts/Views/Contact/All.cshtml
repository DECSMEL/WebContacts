@model IEnumerable<BLL.ViewModel.ContactVM>

@{
    ViewBag.Title = "Index";
}

<h2>Contacts:</h2>


<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th>
            <label>First Name</label>
        </th>
        <th>
            <label>Last Name</label>
        </th>
        <th>
            <label>Phone Numbers</label>
        </th>
        <th>
            <label></label>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @foreach (var phone in item.Phones)
                {
                    @Html.DisplayFor(p => phone.Type)
                    <i> : </i>
                    @Html.DisplayFor(p => phone.Number)
                    <br>
                }
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.PersonId }, new { @class = "btn btn-default" })
                @Html.ActionLink("Edit", "Edit", new { id = item.PersonId }, new { @class = "btn btn-default" })
                @Html.ActionLink("Details", "Details", new { id = item.PersonId }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary" })
</p>

